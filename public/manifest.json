{
  "manifest_version": 2,
  "author": "Bytez",
  "name": "Bytez",
  "version": "1.1.3",
  "icons": {
    "750": "rocket-circle-purple.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Settings"
  },
  "content_security_policy": "script-src 'self' 'sha256-ZJ9u8JVQLISItj6/EnmybQShfdgxNCh1vBSmjgy+Nmk='; object-src 'self'",
  "externally_connectable": {
    "matches": [
      "https://bytez.com/*",
      "http://localhost:3000/*"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://arxiv.org/pdf/*"
  ],
  "background": {
    "page": "background.html"
  }
}